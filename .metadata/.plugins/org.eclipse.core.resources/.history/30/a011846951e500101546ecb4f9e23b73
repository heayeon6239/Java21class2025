package ifexample;

import java.util.Scanner;

public class IfEx6 {

	public static void main(String[] args) {
		
		Scanner scan = new Scanner(System.in);
		
		System.out.print("금액을 입력하시오 >> ");
		int money = scan.nextInt();
		
		int num01 = money/50000; // 5만원으로 나눴을 때 개수
		int num02 = money%50000; // 5만원으로 나눴을 때 나머지 잔돈
		
		int num03 = num02/10000; // 만원으로 나눴을 때
		int num04 = num02%10000; // 만원으로 나눴을 때 나머지
		
		int num05 = num04/5000; // 5천원으로 나눴을 때
		int num06 = num04%5000; // 5천원으로 나눴을 때 나머지
		
		int num07 = num06/1000; // 천원으로 나눴을 때
		int num08 = num06%1000; // 천원으로 나눴을 때 나머지
		
		int num09 = num08/500; // 500원으로 나눴을 때
		int num10 = num08%500; // 500원으로 나눴을 때 나머지
		
		int num11 = num10/100; // 100원으로 나눴을 때
		int num12 = num10%100; // 100원으로 나눴을 때 나머지
		
		System.out.print("5만원권:");
		System.out.println(num01);
		System.out.print("만원권:");
		System.out.println(num03);
		System.out.print("5천원권:");
		System.out.println(num05);
		System.out.print("천원권:");
		System.out.println(num07);
		System.out.print("5백원권:");
		System.out.println(num09);
		System.out.print("백원권:");
		System.out.println(num11);

	}

}
