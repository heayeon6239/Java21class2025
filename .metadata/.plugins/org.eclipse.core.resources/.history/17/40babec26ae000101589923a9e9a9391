package example;

public class DataEx01 {

	public static void main(String[] args) {
		// char 데이터 타입 => 한 음절 표현 (반드시 'a' 작은따옴표 사용)
		char ch = 'A'; // 변수란 값(value)을 대입하는 번지 주소를 이름으로 표현
		char ch2 = 'a';
		System.out.println(ch);
		// (int)ch => 명시적 형 변환 (데이터 손실)
		// char인 데이터 타입의 형을 명시해서 int로 변형하는 것 (인코딩)
		System.out.println((int)ch);
		System.out.println((int)ch2);
		
		int ch3 = 67;
		System.out.println((char)ch3);
		
        // String(객체타입, 반드시 첫 글자는 대문자) 대부분 String 사용
		// Integer => Integer 객체 데이터 타입
		// ★ 객체 타입의 변수에 저장되는 값은 실제값이 존재하는 메모리의 번지 주소
		String str = "A";
		
		// 현재 str 변수에 저장된 데이터는 "Abort"가 아니라 
		// "Abort"가 존재하는 메모리 주소인 2ff4acd0
		String str2 = "Abort";
		System.out.println(System.identityHashCode(str));
		int id = System.identityHashCode(str); // 804564176
		System.out.println(Integer.toHexString(id)); // 2ff4acd0
		
		String str3 = "홍길동";
		System.out.println(str);
		System.out.println(str2);
		System.out.println(str3);
		
		// 이스케이프 형식을 이용해서 문자안의 각종 특정 문자를 포함시킬 수 있음
		// 이스케이프 형식 => 
		String str4 = "나는 \"자바\"를 좋아합니다.";
		System.out.println(str4);
		
		// byte 데이터 타입 => 1byte = 8bit
		// byte 표현 범위 : -128 ~ 127
		// 자바 기본으로 연산의 메모리 용량이 32bit이기 때문에
		// 기본으로 정수는 int 데이터 타입을 사용
		
		byte by1 = 127;
//		byte by2 = 128;
		
		// long 데이터 타입 => 정수(int) 타입의 허용범위를 초과한 경우 반드시 L 또는 l 접미사를 붙임
//		long lo1 = 100000000000;
		long lo2 = 100000000000L; // int 범위안이 아니기 때문에 구분을 위해 L 붙임
		long lo3 = 70; // int범위 안
	}

}
