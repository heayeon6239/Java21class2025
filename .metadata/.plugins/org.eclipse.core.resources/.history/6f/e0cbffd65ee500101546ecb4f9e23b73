package ifexample;

import java.util.Scanner;

public class IfEx11 {

	public static void main(String[] args) {
		
		Scanner scan = new Scanner(System.in);
		
		int bul= 8700;
		int shrimp = 6200;
		int cola = 1500;
		
		System.out.printf("1. 불고기 버거 : %d원 %n2. 새우 버거 : %d원 %n3. 콜라 : %d원", bul,shrimp,cola);
		System.out.printf("%n메뉴를 선택하세요 : ");
		int menu = scan.nextInt();
		System.out.println("현금을 입력하세요 : ");
		int money = scan.nextInt();
		
		switch(menu) {
		case 1: if(money < bul) {
			System.out.println("현금이 부족합니다.");
			}else {
				int change = money - bul;
				System.out.printf("불고기 버거 / 8700원 / 받은 돈: %d원 / 잔돈 : %d원",money,change);
			}
		break;
		case 2: if(money < shrimp) {
			System.out.println("현금이 부족합니다.");
			}else {
				int change = money - shrimp;
				System.out.printf("새우 버거 / 6200원 / 받은 돈: %d원 / 잔돈 : %d원",money,change);
			}
		break;
		default: if(money < cola) {
			System.out.println("현금이 부족합니다.");
			}else {
				int change = money - cola;
				System.out.printf("콜라 / 1500원 / 받은 돈: %d원 / 잔돈 : %d원",money,change);
			}
		break;
		
		
		}
	}
}
